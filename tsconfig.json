{
  "compilerOptions": {
    "types": [
      "node",
      "chai",
      "mocha"
    ],
    "lib": [
      "ESNext"
    ],
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "composite": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "rootDir": "./"
  },
  "ts-node": {
    "files": true,
    "esm": true
  },
  "include": [
    "./lib/**/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
  ],
}
